<% include ./partials/header2 %>
<div class = "flexible2">
    <form method = "post",action = "/forgotPassword">
    <div class = "border2" class = "col 12" style = "width:100%;height:75%;">
      <h3 style = "text-align:center">Reset Password</h3>
      <% if (errorMessage.length>0){ %>
      <div class="alert alert-danger" role="alert" style = "text-align:center;">
        <%= errorMessage %>
        <div style = "float:right;padding-right:15px;"><a href = "#"><i class="fas fa-times" style = "font-size: 30px;color:black;"></i></a></div> 
      </div>
      <% } %>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix" id  = "change">account_circle</i>
          <input id="e" type="email" class="validate" name = "email" title = "Enter your Email" required>
          <label for="e">Email</label>
        </div>
      </div>
      <div class="row">
        <button class="btn waves-effect waves-light" type="submit" name="action" id = "login">Reset Password</button>
      </div>
        
    </div>
    
</form>

</div>


<% include ./partials/footer %>