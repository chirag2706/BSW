<% include ./partials/header2 %>

<div class = "flexible2">
    <form method = "post",action = "/login">
    <div class = "border2" class = "col 12">
      <h1 style = "text-align:center;">Login</h1>
      <% if (errorMessage.length>0){ %>
      <div class="alert alert-danger" role="alert" style = "text-align:center;">
          <%= errorMessage %>
        <div style = "float:right;padding-right:15px;"><a href = "#"><i class="fas fa-times" style = "font-size: 30px;color:black;"></i></a></div> 
      </div>
      <% } %>
      <% if (successMessage.length>0){ %>
          <div class="alert alert-success" role="alert" style = "text-align:center;">
            <%= successMessage %>
            <div style = "float:right;padding-right:15px;"><a href = "#"><i class="fas fa-times" style = "font-size: 30px;color:black;"></i></a></div> 
          </div>
      <% } %>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix" id  = "change">account_circle</i>
          <input id="e" type="text" class="validate" name = "email" title = "Enter your Email">
          <label for="e">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix" id  = "change">lock</i>
          <input id="p" type="password" class="validate" name = "password" title = "Atleast password should be of 9 characters" minlength = "9">
          <label for="p">Password</label>
          <!--<form method = "post" action = "/forgotPassword">-->
              <a href = "/forgotPassword" id = "forgot" >Forgot your password?</a>
        </div>
        
        <button class="btn waves-effect waves-light" type="submit" name="action" id = "login" onclick = "this.innerHTML = 'Logging'">Login
            <i class="material-icons right">send</i>
        </button>
      </div>
        
    </div>
    
</form>

</div>


<% include ./partials/footer %>